@using ECommerce.MvcWebUI.Models;
@model IEnumerable<ProductModel>

<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top product-image" src="~/Upload/@product.Image" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@product.Id">@product.Name</a>
                    </h5>
                    <p class="card-text pt-1 description">@product.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price">
                        <i class="fa fa-try"></i>
                        @product.Price
                    </small>
                    <a href="/Home/Details/@product.Id" class="btn btn-default btn-sm float-right">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>

                        Ürünü İncele
                    </a>
                </div>
            </div>
        </div>
    }

</div>
